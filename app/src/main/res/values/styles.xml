<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0428AA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CourseTitle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/pluralsight_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeirdEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>

    <style name="AddFab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_add_circle_black_24dp</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
