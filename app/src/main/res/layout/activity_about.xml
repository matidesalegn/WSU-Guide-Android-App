<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="WSU Map Guide App"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Version 1.0"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#949191" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Last Update Jun 2022"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#949191" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Developed By"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#949191" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MetoLomi Technologies"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#2B2A2A" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtChannel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="OUR TEAM"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/mati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtChannel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="Matiwos Desalegn"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/jojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mati"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="Muluken Tegegn"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/nati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jojo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="Natnael Biramo"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/teka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nati"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="Tekalign Fikru"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/teka"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="Tsegaw Molla"
                        android:textColor="#6200EA"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <Button
                    android:id="@+id/report_bug"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="6dp"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:background="@drawable/rounded_buttton"
                    android:text="@string/report_a_bug" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>