<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/txtestudent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/estudent"
                    android:padding="15sp"
                    android:text=" My Grade E-Student"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/estudent"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@drawable/site"/>

                <Button
                    android:id="@+id/btnestudent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:onClick="estudent"
                    android:padding="25dp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtsite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/site"
                    android:padding="15sp"
                    android:text="Official Websites"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/site"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@drawable/estudent"/>

                <Button
                    android:id="@+id/btnsite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:onClick="site"
                    android:padding="25dp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txteLearning"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/eLearning"
                    android:padding="15sp"
                    android:text="E-Learning"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/eLearning"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@drawable/images"/>

                <Button
                    android:id="@+id/btneLearning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:onClick="eLearning"
                    android:padding="25dp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>